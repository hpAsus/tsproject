{
  "compilerOptions": {
    "moduleResolution" : "node",
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers" : true,
    "rootDir" : "app/src",
    "outDir" : "dist/app/src"
  },
  "exclude": [
    ".git",
    "node_modules",
    "dist",
    "docs",
    "test",
    "logs",
    "typings/main.d.ts",
    "typings/main"
  ]
}